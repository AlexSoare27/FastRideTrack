<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.ispw.fastridetrack.Controller.GUIController.SelectDriverGUIController">

   <children>
      <ImageView fitHeight="720.0" fitWidth="1280.0">
         <image>
            <Image url="@/org/ispw/fastridetrack/images/SelectDriver.jpg"/>
         </image>
      </ImageView>

      <!-- Etichette informazioni driver -->
      <Label fx:id="driverNameLabel" layoutX="260.0" layoutY="150.0" style="-fx-font-size: 18px; -fx-text-fill: white;" />
      <Label fx:id="vehicleInfoLabel" layoutX="260.0" layoutY="180.0" style="-fx-font-size: 16px; -fx-text-fill: white;" />
      <Label fx:id="driverRatingLabel" layoutX="260.0" layoutY="210.0" style="-fx-font-size: 16px; -fx-text-fill: white;" />

      <!-- Destinazione e pagamento -->
      <Label fx:id="destinationLabel" layoutX="260.0" layoutY="270.0" style="-fx-font-size: 16px; -fx-text-fill: white;" />
      <Label fx:id="paymentMethodLabel" layoutX="260.0" layoutY="300.0" style="-fx-font-size: 16px; -fx-text-fill: white;" />

      <!-- Pulsante conferma -->
      <Button fx:id="confirmButton" layoutX="943.0" layoutY="395.0" prefHeight="40.0" prefWidth="267.0"
              onAction="#onConfirmRide" style="-fx-background-color: #00cc44; -fx-font-size: 16px; -fx-text-fill: white;"/>
   </children>
</AnchorPane>

